    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "TFM-client-app",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "TFM-client-app (Windows SSL Workaround)",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define=DISABLE_SSL_VERIFICATION=true"
            ],
            "toolArgs": [
                "--no-sound-null-safety"
            ]
        },
        {
            "name": "TFM-client-app (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "TFM-client-app (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}